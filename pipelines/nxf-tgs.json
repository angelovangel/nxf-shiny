{
  "name": "nxf-tgs",
  "fullname": "angelovangel/nxf-tgs",
  "url": "https://github.com/angelovangel/nxf-tgs",
  "shiny_inputs":
[
  {
    "type": "fileInput",
    "inputId": "samplesheet",
    "label": "Samplesheet",
    "required": true,
    "multiple": false,
    "accept": [".csv", ".xlsx"],
    "placeholder": "Upload samplesheet",
    "help": "path to csv or excel with (at least) columns user, sample, barcode, dna_size"
  },
  {
    "type": "shinyDirButton",
    "inputId": "fastq",
    "id": "fastq",
    "label": "Select fastq_pass folder",
    "title": "",
    "required": true
  },
  
  {
    "type": "selectInput",
    "inputId": "pipeline",
    "label": "epi2me workflow",
    "required": true,
    "multiple": false,
    "choices": ["wf-clone-validation", "wf-bacterial-genomes", "wf-amplicon", "report-only"],
    "help" : "epi2me workflow to run"
  },
   {
    "type": "checkboxInput",
    "inputId": "advanced",
    "label": "Advanced",
    "required": false,
    "value": false
    },
    {
    "type": "textInput",
    "inputId": "assembly_args",
    "label": "Additional assembly args",
    "help" : "Additional command-line arguments passed to the assembly workflow",
    "required": false,
    "value": "",
    "panel_condition": "input.advanced"
    }
  
]
  
}
